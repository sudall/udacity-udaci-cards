{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "outDir": "build/dist",
    "sourceMap": true,
    "experimentalDecorators": true,
    "jsx": "react-native",
    "lib": ["dom", "ES2017"],
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "noEmitHelpers": true,
    "importHelpers": true,
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
//    "baseUrl": "./",
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true
  }
}